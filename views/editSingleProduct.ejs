
    <!-- Navbar -->
    <%- include ("components/header")%>

    <div class="product-section">
      <div class="col-md-12">
        <h1>Edit Product</h1>
      </div>
      <div class="container d-flex justify-content-center">
          <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <form action="/update/<%= product._id %>" method="post">
                    <label class="mt-2 mx-1" for="title">Title</label>
                    <input class="form-control" type="text" name="title" value="<%= product.title %>" placeholder="Product Name">
                    <label  class="mt-2 mx-1" for="title" >Price</label>
                    <input type="number" class="form-control" name="price" value="<%= product.price %>" placeholder="Product Price">
                    <input  class="btn btn-primary mt-2" type="submit" value="Update">
                  
                  </form>
                </div>
              </div>
          </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include ("components/footer")%>