<%- include ("components/header")%>

    <div class="product-section">
      <div class="col-md-12">
        <h1>Edit Products</h1>
      </div>
      <div class="container">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th class="text-center" scope="col">Action</th>
              </tr>
            </thead>
            <% if (products!="") { %>
                <tbody>
                 <% products.forEach((element,index) => { %>
                       <tr>
                      <th scope="row"><%= index + 1 %></th>
                      <td><%= element.title %></td>
                      <td><%= element.price %></td>
                      <td class="text-center" >
                        <a href="/editproduct/<%= element._id %> " class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                        <a href="/delete/<%= element._id %> " class="btn btn-danger"><i class="fa-solid fa-trash"></i>Delete</a>

                      </td>
                    </tr>
                <% }); %>
                  </tbody>
                <%  }else{ %>
                  <tbody>
                    <tr>
                      <td class="text-center" colspan="12"><b >Please Add Products From Add Page </b> </td>
                    </tr>
                    <tr>
                      <td class="text-center" colspan="12"><a href="/add" class="btn btn-primary">Add Product</a> </td>
                    </tr>
                  </tbody>
                  <% } %>
       
          </table>

      </div>
    </div>

    <script>

    </script>
